@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @ViewData["MensagemErro"]
    </div>
}

    @model List<ProfessorModel>

    @{
        ViewData["Title"] = "Professores";
    }

    <div class="text-center">

        <div>
            <h1>Dados dos Professores</h1>
        </div>

        <div class="btn-group btn align-content-start" role="group">
            <a class="btn btn-primary" role="button" type="submit" asp-controller="Professores" asp-action="Adicionar">Adicionar Novo Professor</a>
            <a class="btn btn-secondary" role="button" type="submit" asp-controller="Home" asp-action="Index">Voltar</a>
        </div>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Idade</th>
                    <th scope="col">Contato</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Disciplina</th>
                    <th scope="col">CEP</th>
                    <th scope="col">Gerenciar</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (ProfessorModel professor in Model)
                    {
                <tr>
                    <td>@professor.Id</td>
                    <td>@professor.Nome</td>
                    <td>@professor.Idade</td>
                    <td>@professor.Contato</td>
                    <td>@professor.Email</td>
                    <td>@professor.Disciplina</td>
                    <td>@professor.Cep</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-controller="Professores" asp-action="BuscarEndereco" asp-route-cep="@professor.Cep">Endereço</a>
                            <a role="button" class="btn btn-secondary" asp-route-id="@professor.Id" asp-controller="Professores" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@professor.Id" asp-controller="Professores" asp-action="ApagarConfirmacao">Apagar</a>

                        </div>
                    </td>

                </tr>

                    }

                }

            </tbody>
        </table>


    </div>

