@model List<AlunoModel>

<div class="text-left">

    <div>
        <h1>Dados dos Alunos</h1>
    </div>
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">CEP</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>

                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <button type="button" class="btn btn-primary">Endereço</button>
                            </div>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a class="btn btn-primary" type="submit" asp-controller="Alunos" asp-action="Adicionar">Adicionar Novo Aluno</a>
    </div>
</div>

